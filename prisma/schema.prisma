generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["CPS"]
}

model User {
  uuid      String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  isAdmin   Boolean   @default(false) @map("is_admin")
  createdAt DateTime  @map("create_at")
  updatedAt DateTime? @map("update_at")
  farms           Farm[]    @relation("FarmerToFarm")
  verifiedFarms   Farm[]    @relation("AdminVerifier")

  @@schema("CPS")
  @@map("t_user")
}

model District {
  uuid          String  @id @default(uuid())
  districtCode  String  @unique @map("district_code")
  districtName  String  @map("district_name")
  farms         Farm[]

  @@schema("CPS")
  @@map("t_district")
}

model Farm {
  uuid              String          @id @default(uuid())
  farmerId          String          @map("farmer_id")
  districtId        String          @map("district_id")
  farmName          String          @map("farm_name")
  farmArea          Float           @map("farm_area")
  elevation         Float
  plantingYear      Int             @map("planting_year")
  status            FarmStatus      @default(PENDING_VERIFICATION)
  // Farmer input coordinates (point/rough area)
  inputCoordinates  String?         @map("input_coordinates")
  // Admin verified polygon from QGIS
  verifiedGeometry  String?         @map("verified_geometry")
  // Additional farm details
  description       String?
  cropType          String?         @map("crop_type")
  createdAt         DateTime        @default(now()) @map("created_at")
  updatedAt         DateTime        @updatedAt @map("updated_at")
  verifiedAt        DateTime?       @map("verified_at")
  verifiedBy        String?         @map("verified_by")
  
  farmer            User            @relation("FarmerToFarm", fields: [farmerId], references: [uuid], onDelete: Cascade)
  district          District        @relation(fields: [districtId], references: [uuid], onDelete: Cascade)
  verifier          User?           @relation("AdminVerifier", fields: [verifiedBy], references: [uuid])
  productivities    Productivity[]

  @@schema("CPS")
  @@map("t_farm")
}

enum FarmStatus {
  PENDING_VERIFICATION
  VERIFIED
  REJECTED
  NEEDS_UPDATE

  @@schema("CPS")
}

model Productivity {
  uuid              String    @id @default(uuid())
  farmId            String    @map("farm_id")
  harvestDate       DateTime  @map("harvest_date") @db.Date
  productionAmount  Float     @map("production_amount")
  sellingPrice      Float     @map("selling_price")
  productivity      Float
  farm              Farm      @relation(fields: [farmId], references: [uuid], onDelete: Cascade)

  @@schema("CPS")
  @@map("t_productivity")
}

model Warehouse {
  uuid          String @id @default(uuid())
  warehouseName String @map("warehouse_name")
  location      String

  @@schema("CPS")
  @@map("t_warehouse")
}
