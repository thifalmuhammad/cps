{
  "version": 2,
  "buildCommand": "npm run build:vercel",
  "outputDirectory": ".",
  "framework": "express",
  "env": {
    "NODE_ENV": "production",
    "CI": "false"
  },
  "functions": {
    "app.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/app.js"
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "/app.js"
    },
    {
      "src": "^/(?!api)",
      "dest": "/frontend/build/index.html"
    }
  ]
}
