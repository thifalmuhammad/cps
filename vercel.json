{
  "version": 2,
  "buildCommand": "npm install && npx prisma generate && npx prisma db push --accept-data-loss --skip-generate && cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "functions": {
    "api/handler.js": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/handler"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/build/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/build/index.html"
    }
  ]
}


